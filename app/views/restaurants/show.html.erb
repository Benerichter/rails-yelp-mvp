<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.address %> | <%= @restaurant.phone_number %></p>
<ul class="list-group list-group-flush">
  <% @restaurant.reviews.each do |review|%>
    <li class="list-group-item">
      <% review.rating.times do %>
        <i class='fas fa-star' style="color: #FFEF00"></i>
      <% end %>
      <% (5 - review.rating).times do %>
        <i class='far fa-star'></i>
      <% end %>
      <%= review.rating %>
      <p>
        <%= review.content %>
      </p>
      </li>
  <% end %>
</ul>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary my-3" %>
<%= link_to "Go back to restaurants", restaurants_path, class: "btn btn-primary my-3"%>
